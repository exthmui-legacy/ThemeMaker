<fonts-modification version="1">

    <!-- 基本字体替换 -->
    <family customizationType="new-named-family" name="sans-serif">
        <font weight="100" style="normal">Roboto-Thin.ttf</font>
        <font weight="100" style="italic">Roboto-ThinItalic.ttf</font>
        <font weight="300" style="normal">Roboto-Light.ttf</font>
        <font weight="300" style="italic">Roboto-LightItalic.ttf</font>
        <font weight="400" style="normal">Roboto-Regular.ttf</font>
        <font weight="400" style="italic">Roboto-Italic.ttf</font>
        <font weight="500" style="normal">Roboto-Medium.ttf</font>
        <font weight="500" style="italic">Roboto-MediumItalic.ttf</font>
        <font weight="900" style="normal">Roboto-Black.ttf</font>
        <font weight="900" style="italic">Roboto-BlackItalic.ttf</font>
        <font weight="700" style="normal">Roboto-Bold.ttf</font>
        <font weight="700" style="italic">Roboto-BoldItalic.ttf</font>
    </family>

    <!-- 增加别名 -->
    <alias name="sans-serif-condensed" to="sans-serif" />
    <alias name="sans-serif-condensed-light" to="sans-serif" weight="300" />
    <alias name="sans-serif-condensed-medium" to="sans-serif" weight="500" />

    <!-- CJK环境下的 sans-serif 字体 fallback -->
    <family lang="zh-Hans" customizationType="new-fallback">
		<font weight="300" style="normal">NotoSansSC-Light.otf</font>
        <font weight="400" style="normal">NotoSansSC-Regular.otf</font>
		<font weight="700" style="normal">NotoSansSC-Bold.otf</font>
    </family>
    <family lang="zh-Hant zh-Bopo" customizationType="new-fallback">
		<font weight="300" style="normal">NotoSansSC-Light.otf</font>
        <font weight="400" style="normal">NotoSansSC-Regular.otf</font>
		<font weight="700" style="normal">NotoSansSC-Bold.otf</font>
    </family>
    <family lang="zh-Hans" customizationType="new-fallback">
        <font weight="400" style="normal" index="2">NotoSansCJK-Regular.ttc</font>
    </family>
    <family lang="zh-Hant zh-Bopo" customizationType="new-fallback">
        <font weight="400" style="normal" index="3">NotoSansCJK-Regular.ttc</font>
    </family>
    <family lang="ja" customizationType="new-fallback">
        <font weight="400" style="normal" index="0">NotoSansCJK-Regular.ttc</font>
    </family>
    <family lang="ko" customizationType="new-fallback">
        <font weight="400" style="normal" index="1">NotoSansCJK-Regular.ttc</font>
    </family>
</fonts-modification>
